<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/s50dp"
    android:id="@+id/ll_match"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/s300dp"
            android:layout_height="wrap_content">
            <!--header-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/order_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngày 17-10-2017"
                        android:textSize="@dimen/s25dp"
                        android:layout_marginLeft="@dimen/s20dp"
                        android:maxLines="2"
                        android:layout_marginTop="@dimen/s10dp"
                        android:textStyle="italic|bold"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_alignBottom="@+id/view"/>
                </LinearLayout>
            </LinearLayout>
            <!--//body-->
            <LinearLayout
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="@dimen/s200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    >
                    <!--money-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/s20dp"
                        android:layout_height="@dimen/s40dp">
                        <com.fimo_pitch.custom.view.RoundedImageView
                            android:layout_width="@dimen/s20dp"
                            android:background="@drawable/ic_money"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/s20dp"/>
                        <TextView
                            android:id="@+id/order_price"
                            android:layout_width="wrap_content"
                            android:text="300.000vnđ"
                            android:textSize="@dimen/s20sp"
                            android:layout_marginLeft="@dimen/s20dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/accent_material_light"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <!--time-->
                    <LinearLayout
                        android:layout_marginTop="@dimen/s20dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="@dimen/s40dp">
                        <com.fimo_pitch.custom.view.RoundedImageView
                            android:layout_width="@dimen/s20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_clock"
                            android:layout_height="@dimen/s20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/order_time"
                            android:text="17:00"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/s20dp"
                            android:textSize="@dimen/s20sp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/accent_material_light"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/s60dp"
                        android:layout_marginTop="@dimen/s20dp"
                        android:orientation="horizontal">

                        <com.fimo_pitch.custom.view.RoundedImageView
                            android:layout_width="@dimen/s20dp"
                            android:layout_height="@dimen/s20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_clock" />

                        <TextView
                            android:id="@+id/order_descriptipn"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/s60dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/s20dp"
                            android:text="Mô tả"
                            android:textColor="@color/accent_material_light"
                            android:textSize="@dimen/s20sp" />
                    </LinearLayout>

                    <!--location-->
            </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/s100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_cancel"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="@dimen/s300dp"
                android:layout_height="@dimen/s70dp"
                android:layout_marginTop="@dimen/s40dp"
                android:text="Hủy yêu cầu"
                android:textSize="@dimen/s12dp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Grey"></View>

</LinearLayout>
