<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_marginTop="@dimen/s30dp"
            android:orientation="vertical"
            android:weightSum="1">
            <!--money-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/s10dp"
                android:layout_marginLeft="@dimen/s20dp"
                android:layout_height="@dimen/s40dp">
                <com.fimo_pitch.custom.view.RoundedImageView
                    android:layout_width="@dimen/s20dp"
                    android:background="@drawable/ic_money"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/s20dp"/>
                <EditText
                    android:id="@+id/edt_money"
                    android:hint="Chi phí cho trận đấu ?"
                    style="@style/item_news"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/s40dp"
                android:layout_height="@dimen/s35dp"
                android:layout_weight="0.03">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/s40dp"
                        android:layout_marginLeft="@dimen/s20dp"
                        android:text="Thua trả"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/s40dp"
                        android:layout_marginLeft="@dimen/s20dp"
                        android:text="Chia đôi"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/s40dp"
                        android:layout_marginLeft="@dimen/s20dp"
                        android:text="Khác"

                        />
                </RadioGroup>
            </LinearLayout>
            <!--time-->
            <LinearLayout
                android:layout_marginTop="@dimen/s20dp"
                android:layout_marginLeft="@dimen/s20dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/s40dp"
                android:layout_weight="0.03">
                <com.fimo_pitch.custom.view.RoundedImageView
                    android:layout_width="@dimen/s20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_clock"
                    android:layout_height="@dimen/s20dp"/>
                <EditText
                    android:id="@+id/edt_time"
                    style="@style/item_news"
                    android:hint="Thời gian diễn ra trận đấu ?"
                    />
                />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/s20dp"
                android:layout_marginLeft="@dimen/s20dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/s40dp"
                android:layout_weight="0.03">
                <com.fimo_pitch.custom.view.RoundedImageView
                    android:layout_width="@dimen/s20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_member"
                    android:layout_height="@dimen/s20dp"/>
                <EditText
                    android:id="@+id/edt_"
                    style="@style/item_news"
                    android:hint="Số người tham gia"
                    android:inputType="number"
                    />
                />
            </LinearLayout>
            <!--location-->
            <LinearLayout
                android:layout_marginLeft="@dimen/s20dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/s20dp"
                android:orientation="horizontal"
                android:layout_height="@dimen/s40dp">
                <com.fimo_pitch.custom.view.RoundedImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/s20dp"
                    android:background="@drawable/ic_location"
                    android:layout_height="@dimen/s20dp"/>
                <EditText
                    android:id="@+id/edt_location"
                    android:hint="Khu vực bạn muốn diễn ra "
                    style="@style/item_news"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/s20dp"
                android:layout_marginBottom="@dimen/s5dp"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/s20dp"
                android:orientation="horizontal"
                android:layout_height="@dimen/s40dp">
                <com.fimo_pitch.custom.view.RoundedImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/s20dp"
                    android:background="@drawable/ic_note"
                    android:layout_height="@dimen/s20dp"/>
                <EditText
                    android:id="@+id/edt_description"
                    android:hint="Miêu tả về trận đấu này"
                    style="@style/item_news"
                    />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content">

            <com.fimo_pitch.custom.view.RoundedImageView
            android:id="@+id/img_cancel"
            android:layout_width="@dimen/s40dp"
            android:layout_height="@dimen/s40dp"
            android:background="@drawable/ic_cancel"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/s100dp"
            />

            <com.fimo_pitch.custom.view.RoundedImageView
                android:id="@+id/img_send"
                 android:layout_width="@dimen/s40dp"
                 android:layout_height="@dimen/s40dp"
                android:background="@drawable/ic_post"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/img_cancel"
                android:layout_toStartOf="@+id/img_cancel"
                android:layout_marginRight="@dimen/s70dp"
                android:layout_marginEnd="@dimen/s70dp" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>