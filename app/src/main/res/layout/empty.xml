<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.fimo_pitch.custom.view.RoundedImageView
        android:layout_width="@dimen/s100dp"
        android:layout_height="@dimen/s100dp"
        android:background="@drawable/ic_error"
        android:layout_marginTop="@dimen/s200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/roundedImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/s20dp"
        android:textColor="@color/button_grey"
        android:text="@string/load_failed"
        android:id="@+id/textView2"
        android:layout_marginTop="@dimen/s30dp"
        android:layout_below="@+id/roundedImageView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
