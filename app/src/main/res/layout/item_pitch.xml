<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/ll_match"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="@dimen/s20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/s250dp"
            android:layout_height="wrap_content">
            <!--header-->
            <TextView
                android:id="@+id/pitch_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sân bóng sô 1"
                android:textSize="@dimen/s25dp"
                android:layout_marginTop="@dimen/s5dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:layout_alignBottom="@+id/view"/>

            <LinearLayout
                    android:layout_width="@dimen/s200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">
                    <!--money-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/s20dp"
                        android:layout_height="@dimen/s20dp">
                        <com.fimo_pitch.custom.view.RoundedImageView
                            android:layout_width="@dimen/s20dp"
                            android:background="@drawable/ic_manager"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/s20dp"/>

                        <TextView
                            android:id="@+id/pitch_size"
                            android:layout_width="wrap_content"
                            android:text="Sân 7 người"
                            android:textSize="@dimen/s20dp"
                            android:layout_marginLeft="@dimen/s20dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/accent_material_light"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <!--time-->
                    <LinearLayout
                        android:layout_marginTop="@dimen/s20dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <com.fimo_pitch.custom.view.RoundedImageView
                            android:layout_width="@dimen/s20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_stadium"
                            android:layout_height="@dimen/s20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/pitch_type"
                            android:text="Sân cỏ nhân tạo"
                            android:layout_marginLeft="@dimen/s20dp"
                            android:textSize="@dimen/s20dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/accent_material_light"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/s20dp"
                    android:layout_height="@dimen/s30dp">
                    <com.fimo_pitch.custom.view.RoundedImageView
                        android:layout_width="@dimen/s20dp"
                        android:background="@drawable/ic_note"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/s20dp"/>
                    <TextView
                        android:id="@+id/pitch_description"
                        android:layout_width="wrap_content"
                        android:text="Sân 7 người"
                        android:textSize="@dimen/s20dp"
                        android:layout_marginLeft="@dimen/s20dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/accent_material_light"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
        <Button
            android:layout_width="@dimen/s150dp"
            android:layout_height="@dimen/s70dp"
            android:gravity="center"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:text="Đặt ngay"
            />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/s20dp"
        android:layout_marginBottom="@dimen/s5dp"
        android:background="@color/Grey"></View>

</LinearLayout>
