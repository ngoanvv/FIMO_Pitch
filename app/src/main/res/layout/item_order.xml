<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/s50dp"
    android:id="@+id/ll_match"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Grey"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/s300dp"
            android:layout_height="wrap_content">
            <!--header-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/s10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/pitch_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/view"
                        android:layout_marginLeft="@dimen/s15dp"
                        android:layout_marginTop="@dimen/s15dp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="19:00 - 21:00"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="@dimen/s25dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <!--//body-->
            <LinearLayout
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="@dimen/s200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingBottom="@dimen/s15dp"
                    android:orientation="vertical"
                    >
                    <!--money-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/s10dp"
                        android:layout_height="@dimen/s40dp">
                        <com.fimo_pitch.custom.view.RoundedImageView
                            android:layout_width="@dimen/s25dp"
                            android:background="@drawable/ic_dollars"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/s25dp"/>
                        <TextView
                            android:id="@+id/item_price"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:text="300.000vnđ"
                            android:textSize="@dimen/s20sp"
                            android:layout_marginLeft="@dimen/s15dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/accent_material_light"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <!--time-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/s40dp"
                        android:layout_marginTop="@dimen/s10dp"
                        android:orientation="horizontal">

                        <com.fimo_pitch.custom.view.RoundedImageView
                            android:layout_width="@dimen/s25dp"
                            android:layout_height="@dimen/s25dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_cld" />

                        <TextView
                            android:id="@+id/item_typeDate"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/s15dp"
                            android:text="Ngày nghỉ"
                            android:textColor="@color/accent_material_light"
                            android:textSize="@dimen/s20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/s15dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="@dimen/s60dp">

                        <com.fimo_pitch.custom.view.RoundedImageView
                            android:layout_width="@dimen/s25dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_deal"
                            android:layout_height="@dimen/s25dp"
                            android:id="@+id/roundedImageView4" />

                        <TextView
                            android:layout_width="@dimen/s250dp"
                            android:id="@+id/pitch_description"
                            android:text="Mô tả"
                            android:maxLines="2"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/s15dp"
                            android:textSize="@dimen/s20sp"
                            android:textColor="@color/accent_material_light"
                            android:layout_height="@dimen/s60dp"/>
                    </LinearLayout>

                    <!--location-->
            </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/s100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="@dimen/s15dp"
            android:orientation="vertical">
        <Button
            android:id="@+id/bt_book"
            android:layout_width="@dimen/s150dp"
            android:layout_height="@dimen/s70dp"
            android:layout_marginTop="@dimen/s40dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Đặt sân"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
