<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/id_sName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:maxLines="2"
        android:textStyle="bold"
        android:text="Hệ thống sân bóng 123"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_30sp" />
    <TextView
        android:id="@+id/id_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:maxLines="2"
        android:text="144 Xuân thủy - Cầu Giấy - Hà Nội"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_20sp" />
    <TextView
    android:id="@+id/id_des"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:maxLines="2"
    android:text=""
    android:textColor="@color/colorBlack"
    android:textSize="@dimen/text_size_20sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1dp"
        android:background="@color/blueGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/id_more"
            android:layout_width="@dimen/height_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:text="Xem chi tiết"
            android:textAllCaps="false"
            android:textColor="@color/blueGray"
            android:textSize="@dimen/text_size_20sp" />
        <Button
            android:id="@+id/id_dialog_ok"
            android:layout_width="@dimen/height_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="@color/blueGray"
            android:textSize="@dimen/text_size_20sp" />

        <View
            android:layout_width="@dimen/width_1dp"
            android:layout_height="match_parent"
            android:background="@color/blueGray" />
    </LinearLayout>

</LinearLayout>