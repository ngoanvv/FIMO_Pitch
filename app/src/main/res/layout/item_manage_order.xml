<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/ll_match"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="230dp"
            android:layout_height="wrap_content">

            <!--header-->
            <TextView
                android:id="@+id/pitch_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sân bóng sô 1"
                android:textSize="@dimen/s17dp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/s20dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:layout_alignBottom="@+id/view"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/s20dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/order_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="19:00 - 21:00"
                        android:textSize="@dimen/s25dp"
                        android:layout_marginLeft="10dp"
                        android:maxLines="2"
                        android:layout_marginTop="@dimen/s5dp"
                        android:textStyle="italic"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_alignBottom="@+id/view"/>
                </LinearLayout>
            </LinearLayout>
            <!--//body-->
            <LinearLayout
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/s30dp"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    >
                    <!--money-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_height="20dp">
                        <com.fimo_pitch.custom.view.RoundedImageView
                            android:layout_width="10dp"
                            android:background="@drawable/ic_manager"
                            android:layout_gravity="center_vertical"
                            android:layout_height="10dp"/>
                        <TextView
                            android:id="@+id/order_userName"
                            android:layout_width="wrap_content"
                            android:text="Dũng Nguyễn Lê"
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/accent_material_light"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <!--time-->
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <com.fimo_pitch.custom.view.RoundedImageView
                            android:layout_width="10dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_clock"
                            android:layout_height="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/order_day"
                            android:text="17-01-2017"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/accent_material_light"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!--location-->
                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.fimo_pitch.custom.view.RoundedImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="10dp"
                        android:background="@drawable/ic_phone"
                        android:layout_height="10dp"/>

                    <TextView
                        android:id="@+id/order_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:textSize="15sp"
                        android:text="0923787434"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:inputType="textMultiLine"
                        android:textColor="@color/accent_material_light"
                        />
                </LinearLayout>
            </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/s20dp"
            android:orientation="vertical">
        <Button
            android:id="@+id/bt_ok"
            android:layout_marginTop="@dimen/s20dp"
            android:layout_width="100dp"
            android:paddingBottom="@dimen/s10dp"
            android:gravity="center"
            android:layout_height="@dimen/s50dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:text="Duyệt"/>

            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/s20dp"
                android:layout_height="@dimen/s50dp"
                android:paddingBottom="@dimen/s10dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="Từ chối"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/Grey"></View>
</LinearLayout>
