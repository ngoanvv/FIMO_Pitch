<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_below="@+id/menu_view"
        android:layout_width="match_parent"
        android:background="@color/Grey"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <RelativeLayout
        android:id="@+id/menu_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Spinner
            android:id="@+id/spn_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s50dp"
            
            android:gravity="center"
            android:layout_marginRight="@dimen/s100dp"
            android:background="@android:color/transparent"
            />
        <ImageView
            android:id="@+id/view2"
            android:layout_width="@dimen/s50dp"
            android:layout_height="@dimen/s50dp"
            android:background="@drawable/ic_list"
            android:layout_alignParentRight="true"
            android:onClick="addListenerOnButton"/>

        <ImageView
            android:id="@+id/view4"
            android:layout_width="@dimen/s50dp"
            android:layout_height="@dimen/s50dp"
            android:background="@drawable/ic_grid"
            android:onClick="addListenerOnButton"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/view2"
            android:layout_toStartOf="@+id/view2" />
    </RelativeLayout>
</RelativeLayout>