<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_pitch_detail"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fimo_pitch.main.DetailActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_pitch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s150dp"
            android:background="@drawable/ic_san"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:titleTextColor="@color/white"
            android:layout_height="@dimen/s50dp"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/s120dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2">
            <ImageView
                android:layout_width="@dimen/s20dp"
                android:layout_height="@dimen/s20dp"
                android:src="@drawable/ic_star"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3.5"
                android:textColor="@color/white"
                android:textSize="@dimen/s15dp"
                android:layout_marginLeft="@dimen/s5dp"
                />
            <ImageView
                android:layout_width="@dimen/s20dp"
                android:layout_height="@dimen/s20dp"
                android:layout_marginLeft="@dimen/s15dp"
                android:src="@drawable/ic_comment"
                android:id="@+id/imageView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/s15dp"
                android:text="2"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/s10dp"
            android:layout_gravity="center_horizontal"
            android:text="Xem tất cả hình ảnh"
            android:padding="@dimen/s5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/s20dp"
            android:background="@drawable/rounded__grey_border"
            android:layout_alignBottom="@+id/linearLayout2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/s20dp"
            android:layout_marginBottom="@dimen/s10dp"
            android:id="@+id/textView4" />

        <TextView
            android:id="@+id/tv_syspitch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/s17dp"
            android:layout_gravity="center_horizontal"
            android:text="Sân bóng Trần Quốc Hoàn"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/s12dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="@dimen/s10dp"
        android:paddingBottom="@dimen/s10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.fimo_pitch.custom.view.RoundedImageView
                android:id="@+id/bt_call"
                style="@style/item_contact"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_call"
                ></com.fimo_pitch.custom.view.RoundedImageView>

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="@dimen/s70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0989-177-123"
                android:lines="2"
                android:textSize="@dimen/s10dp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s20dp"
            android:layout_marginRight="@dimen/s20dp"
            android:orientation="vertical">
            <com.fimo_pitch.custom.view.RoundedImageView
                android:id="@+id/bt_order"
                style="@style/item_contact"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_manager"
                />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mr Hưng BQ"
                android:textSize="@dimen/s10dp"
                android:lines="2"
                android:textStyle="bold"
                android:id="@+id/textView5" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.fimo_pitch.custom.view.RoundedImageView
                style="@style/item_contact"
                android:background="@drawable/ic_location"
                android:layout_gravity="center_horizontal"
                android:id="@+id/roundedImageView2"
                 />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="144 Xuân Thủy"
                android:lines="2"
                android:textSize="@dimen/s10dp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_marginLeft="@dimen/s20dp"
        android:layout_marginRight="@dimen/s20dp"
        android:text="Xin chào các bạn, đây là hệ thống sân bóng Trần Quốc Hoàn. Địa chỉ là cái gì đó. Sân đẹp lắm, ổn, mời bạn qua chơi"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/s10dp"
        android:background="@color/button_grey"></View>

    <TableLayout
        android:id="@+id/tb_pricing"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TableLayout>
    <Button
        android:id="@+id/bt_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem lịch sân cụ thể"
        android:textColor="@color/white"
        android:padding="@dimen/s30dp"
        android:background="@color/com_facebook_blue"
        />
</LinearLayout>
</ScrollView>
