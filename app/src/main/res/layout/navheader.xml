<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/s200dp"
    android:background="?attr/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="@dimen/s10dp">

    <TextView
        android:layout_marginTop="@dimen/s10dp"
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/s20dp"
        android:text="Nguyễn Điệp UET"
        android:textSize="@dimen/s15dp"
        />
    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s5dp"
        android:text="diep170995@gmail.com"
        android:textSize="@dimen/s15dp"
        android:layout_alignParentBottom="true"
        />

    <com.fimo_pitch.custom.view.RoundedImageView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/s60dp"
        android:layout_height="@dimen/s5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
