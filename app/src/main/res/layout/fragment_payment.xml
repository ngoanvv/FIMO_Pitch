<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fimo_pitch.main.PaymentActivity">

    <LinearLayout
        android:background="@drawable/rounded__grey_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
            android:id="@+id/img_payment"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_pitch" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
            <TextView
                android:text="Sân bóng số 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_30sp"
                android:layout_marginTop="30dp"
                android:layout_alignTop="@+id/img_payment"
                android:layout_centerHorizontal="true" />
            <TextView
                android:text=" 17h-19h,ngày 24/12/2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_30sp"
                android:layout_alignTop="@+id/img_payment"
                android:layout_centerHorizontal="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                >
            <TextView
                android:id="@+id/textView10"
                android:text="Hệ thống sân bóng Trần Quốc Hoàn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_details_25sp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/textView11"
                android:maxLines="2"
                android:text=" 144 Trần Quốc Hoàn, Cầu Giấy, Hà Nội"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20sp"
                android:layout_centerHorizontal="true" />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:maxLines="2"
            android:text="Thông tin sân"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_details_25sp"
            android:layout_below="@+id/img_payment"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView9" />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.fimo_pitch.custom.view.RoundedImageView
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:background="@drawable/ic_member"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/item_description"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textSize="@dimen/text_size_20sp"
                android:text="7 người"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:inputType="textMultiLine"
                android:textColor="@color/accent_material_light" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.fimo_pitch.custom.view.RoundedImageView
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:background="@drawable/ic_dollars"
                android:layout_height="20dp"/>
            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textSize="@dimen/text_size_20sp"
                android:text="Miễn phí 1 bình nước"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:inputType="textMultiLine"
                android:textColor="@color/accent_material_light"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Grey"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:maxLines="2"
            android:text="Tổng chi phí"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_details_25sp" />
            <TextView
                android:maxLines="2"
                android:text="500.000 đ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:layout_alignParentRight="true"
                android:paddingBottom="20dp"
                android:textColor="@color/com_facebook_blue"
                android:textSize="@dimen/text_size_details_25sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bt_now"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Đăng nhập "
                android:textSize="25dp"
                android:paddingTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/rounded_border"
                />

            <com.fimo_pitch.custom.view.RoundedImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/ic_launcher"
                android:layout_marginLeft="40dp"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/bt_now"
                android:layout_alignStart="@+id/bt_now" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>
