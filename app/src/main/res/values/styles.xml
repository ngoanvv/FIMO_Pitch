<resources>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstar</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>
    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3F51B5</item>
        <!-- Light Indigo -->
        <item name="colorPrimaryDark">#3949AB</item>
        <!-- Dark Indigo -->
        <item name="colorAccent">#00B0FF</item>
        <!-- Blue -->
    </style>

    <style name="item_addPitch">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/com_facebook_blue</item>
        <item name="android:layout_marginTop">@dimen/s5dp</item>
        <item name="android:layout_marginRight">@dimen/s30dp</item>
        <item name="android:layout_marginLeft">@dimen/s30dp</item>
    </style>

    <style name="item_news">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/s15dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/s30dp</item>
    </style>

    <style name="item_contact">
        <item name="android:layout_width">@dimen/s40dp</item>
        <item name="android:layout_height">@dimen/s40dp</item>
    </style>

    <style name="item_detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/s12dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/s30dp</item>
        <item name="android:textColor">@color/myAccentColor</item>
        <item name="android:maxLines">2</item>


    </style>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="tabTheme" parent="android:style/Theme">
        <item name="android:tabWidgetStyle">@style/Widget.TabWidget</item>
        <item name="android:isRepeatable">true</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="transparent_bottom_line" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorTransparent</item>
        <item name="colorControlActivated">@color/colorTransparent</item>
        <item name="colorControlHighlight">@color/colorTransparent</item>
    </style>

    <style name="Widget.TabWidget" parent="android:Theme">
        <item name="android:tabStripEnabled">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
