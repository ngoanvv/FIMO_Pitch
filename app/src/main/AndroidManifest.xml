<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fimo_pitch">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".main.LoginActivity"
            ></activity>

        <activity android:name=".main.IntroductionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".main.NavigationActivity"
            android:windowSoftInputMode="adjustPan" />
        />
        <activityMainActivity
            android:name=".main.AboutActivity"
            android:windowSoftInputMode="adjustPan|adjustResize" />

        <activity android:name=".main.SignUpActivity" />

        <activity android:name=".main.ForgotPasswordActivity" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name=".main.PitchDetailActivity"
            android:label="Thông tin sân bóng"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".main.PricingActivity"
            android:label="@string/title_activity_pricing"
            android:theme="@style/AppTheme" />
        <!--
